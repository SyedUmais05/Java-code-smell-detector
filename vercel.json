{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/main.py"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/((?!api/|assets/|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}